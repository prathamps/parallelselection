---
import "./Header.css"
import parallelSelectionLogo from "/parallelselectionlogo.svg"
import searchIcon from "/search.png"
import parallelrodsImg from "/parallelrods.svg"
import ParallelRods from "./ParallelRods.astro"
---

<header class="header">
	<div class="container">
		<div class="logoContainer">
			<a href="/">
				<img
					class="parallelSelectionLogo"
					src={parallelSelectionLogo}
					alt="Parallel Selection Logo"
				/>
			</a>
			<div class="searchBar">
				<div class="searchIconContainer">
					<img src={searchIcon} alt="" />
				</div>
				<input
					class="searchInput"
					placeholder="Select Selection"
					data-search
					maxlength="30"
				/>
			</div>
		</div>
		<div class="navbarContainer">
			<ParallelRods />
		</div>
	</div>
</header>
