---
import BlogPostSection from "../components/BlogPostSection/BlogPostSection.astro"
import Footer from "../components/Footer/Footer.astro"
import Header from "../components/Header/Header.astro"
import Layout from "../layouts/Layout.astro"
import "../styles/components/SearchPage.css"
import "../styles/global.css"

console.log(Astro.params)
---

<Layout>
	<Header />
	<div class="searchContainer">
		<div class="searchPageContainer">
			<div class="searchHeaderContainer">
				<div class="headerTitle" id="Title">#</div>
			</div>
		</div>
	</div>

	<BlogPostSection name="lifeStyle" id="BlogPost" />
	<script>
		const titleText = document.getElementById("Title") as HTMLDivElement
		const queryParams = new URLSearchParams(window.location.search)
		const searchTerm = queryParams.get("search")

		const blogPostSection = document.getElementById("BlogPost") as HTMLElement
		titleText.innerText = "#" + searchTerm

		console.log(searchTerm)
	</script>
	<Footer />
</Layout>
