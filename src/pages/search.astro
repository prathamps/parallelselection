---
import BlogPostSection from "../components/BlogPostSection/BlogPostSection.astro"
import Footer from "../components/Footer/Footer.astro"
import Header from "../components/Header/Header.astro"
import Layout from "../layouts/Layout.astro"
import "../styles/components/SearchPage.css"
import "../styles/global.css"
---

<Layout>
	<Header />
	<div class="searchContainer">
		<div class="searchPageContainer">
			<div class="searchHeaderContainer">
				<div class="headerTitle" id="Title">#</div>
			</div>
		</div>
	</div>

	<BlogPostSection name="lifeStyle" />
	<script src="/src/components/Header/Header.ts"></script>
	<script async>
		const queryParams = new URLSearchParams(window.location.search)
		const searchTerm = queryParams.get("search")
		const resultTerm = queryParams.get("result")
		const titleText = document.getElementById("Title")
		if (searchTerm) titleText.innerText = "#" + searchTerm
		if (resultTerm) titleText.innerText = "#" + resultTerm
	</script>
	<Footer />
</Layout>
